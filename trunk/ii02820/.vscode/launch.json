                "moduleLoad": false
            }
        },
        {
            "name": "Debug Main App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main_app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build main"
        }
    ]
}